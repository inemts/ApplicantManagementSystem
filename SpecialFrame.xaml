<Page x:Class="Student.SpecialFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Student"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="800"
      Title="SpecialFrame">

    <Grid Background="#fff">
        <StackPanel>
            <TextBlock FontSize="18" FontFamily="Cascadia Code" Margin="0,0,0,10">Специальности для подачи заявки</TextBlock>
            <Border BorderBrush="#FF8C8C8C" BorderThickness="1" CornerRadius="5,0,5,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="250">
                    <WrapPanel Name="list">
                    </WrapPanel>
                </ScrollViewer>
            </Border>
            <Button Visibility="Collapsed" x:Name="AddSpecial" Content="Добавить специальность" BorderBrush="{x:Null}" Background="#FFF976B8" Foreground="White" Padding="20,5,20,5" FontSize="16" Click="AddSpecialBtn" HorizontalAlignment="Left" Margin="0,10,5,0"/>
        </StackPanel>
    </Grid>
</Page>
